@{
    ViewBag.Title = "thongTinChiTietCuaSP";
    Layout = "~/Views/Shared/LayoutHome.cshtml";
    List<THUONGHIEU> dsTH = ViewBag.thuongHieu;
    List<PHANLOAI> dsPL = ViewBag.phanLoai;
}

@using Code_Nhom_07.Models;
@model TUISACH

<link href="~/bootstrap5_2_3/css/bootstrap.css" rel="stylesheet" />
<link href="~/bootstrap5_2_3/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap5_2_3/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

@*link style*@
<link href="~/assets/css/style.css" rel="stylesheet" />

@*link font awesome 5.15.4*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<!-- ===============   THÔNG TIN CHUNG CỦA SẢN PHẨM  ============== -->
<div class="container">
    <div class="row">
        <!-- hình ảnh sp -->
        <div class="col-md-5">
            <div class="container">
                <!-- hình bự -->
                <div class="row">
                    <img src="~/assets/img/@Model.HinhAnh" id="ProductImg">
                </div>
                <!-- hình nhỏ -->
                @*<div class="row">
                        @foreach (var item in dsTH)
                        {
                            <div class="col-md-3">
                                div chứa hình ảnh con
                                <div>
                                    <img src="~/assets/img/@item.HinhAnhThuongHieu" style="width:100%;" class="small-img">
                                </div>
                            </div>
                        }
                    </div>*@

                <!---->
                <div class="row">
                    <div class="col-md-3">
                        <!-- div chứa hình ảnh con -->
                        <div>
                            <img src="~/assets/img/img_chanel.jpg" style="width: 100%;" class="small-img">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <!-- div chứa hình ảnh con -->
                        <div>
                            <img src="~/assets/img/img_versace.jpg" style="width: 100%;" class="small-img">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <!-- div chứa hình ảnh con -->
                        <div>
                            <img src="~/assets/img/img_lv.jpg" style="width: 100%;" class="small-img">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <!-- div chứa hình ảnh con -->
                        <div>
                            <img src="~/assets/img/img_gucci.jpg" style="width: 100%;" class="small-img">
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- chi tiết sp -->
        <div class="col-md-7">
            <div class="row">
                <!-- tên thương hiệu -->
                @foreach (var item in dsTH)
                {
                    <h4>@item.TenThuongHieu</h4>
                    break;
                }
                <!-- tên sản phẩm -->
                <h5 style="font-weight: bold;">@Model.TenTuiSach</h5>
                <!-- mã + xuất xứ của sản phẩm -->
                <div class="row">
                    <div class="col-md-5">
                        <div>
                            <p>Mã sản phẩm: <span class="text-dark">@Model.MaTuiSach</span></p>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div>
                            <p>Xuất xứ: <span class="text-dark">@Model.XuatXu</span></p>
                        </div>
                    </div>
                </div>
                <!-- giá bán của sản phẩm -->
                <div class="row">
                    <p style="color: red; font-weight: bold; font-size: 30px;">@Model.GiaBan</p>
                </div>
                <!-- thông tin của sản phẩm (giới tính + màu sắc + chất liệu) -->
                @foreach (var i in dsPL)
                {
                    <p>Giới tính: <span class="text-dark">@i.GioiTinh</span></p> <br>
                    <p>Màu sắc: <span class="text-dark">@Model.MauSac</span></p> <br>
                    <p>Chất liệu: <span class="text-dark">@Model.ChatLieu</span></p> <br>
                }

                <!-- thêm vào giỏ và mua -->
                <div class="row mt-3">
                    <div class="col-md-5">
                        <div class="btn_them_mua">
                            <a href="/Home/chonMua/@Model.MaTuiSach">THÊM VÀO GIỎ</a>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="btn_them_mua">
                            <a href="/Home/voHang">MUA NGAY</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ===============   THÔNG TIN CHI TIẾT CỦA SẢN PHẨM  ============== -->
<div class="container mt-5 thongTinChiTiet" id="thongTinChiTiet">
    <!-- mô tả chi tiết -->
    <div class="row">
        <h3>Mô tả sản phẩm <span>@Model.TenTuiSach</span></h3>
        <p>
            @Model.MoTa
        </p>
    </div>
    <!-- hình ảnh cao: 500px, rộng: 500px -->
    <div class="row">
        <div class="text-center">
            <img src="~/assets/img/@Model.HinhAnh" style="width: 500px; height: 500px;">
        </div>
    </div>
    <!-- mô tả chi tiết -->
    <div class="row">
        <p>
            @Model.MoTa
        </p>
    </div>
    <!-- Hướng dẫn sử dụng túi xách -->
    <div class="row mt-3">
        <h3>Hướng dẫn bảo quản túi xách</h3>
        <p>
            - Thường xuyên vệ sinh, lau sạch túi. <br>
            - Tránh treo túi bằng qaui vì trọng lượng nặng có thể làm hư quai và dáng túi. <br>
            - Sử dụng khăn mềm để vệ sinh túi. <br>
            - Không cho túi xách vào máy giặt dễ làm mất form và biến dạng. <br>
            - Tránh để túi tiếp xúc trực tiếp ánh mặt trời quá lâu
        </p>
        <!-- tbale -->
        @foreach (var item in dsTH)
        {
            <table class="table table-bordered">
                <tr>
                    <th>Thương hiệu</th>
                    <td>@item.TenThuongHieu</td>
                </tr>
                <tr>
                    <th>Xuất xứ</th>
                    <td>@Model.XuatXu</td>
                </tr>
                <tr>
                    <th>Màu sắc</th>
                    <td>@Model.MauSac</td>
                </tr>
                <tr>
                    <th>Kích thước (dài x rộng x cao)</th>
                    <td>@Model.ChieuDai x @Model.ChieuRong x @Model.ChieuCao</td>
                </tr>
            </table>
        }
    </div>
    <!-- thông tin chung + kích thước -->
    <div class="row mt-3">
        <div class="col-md-6">
            <div>
                <h3>THÔNG TIN CHUNG</h3>
                <hr style="border-top: 1px solid #000;">
                @foreach (var item in dsPL)
                {
                    <table class="table table-border">
                        <tr>
                            <th>GIỚI TÍNH</th>
                            <td>@item.GioiTinh</td>
                        </tr>
                        <tr>
                            <th>MÀU SẮC</th>
                            <td>@Model.MauSac</td>
                        </tr>
                        <tr>
                            <th>CHẤT LIỆU</th>
                            <td>@Model.ChatLieu</td>
                        </tr>
                        <tr>
                            <th>XUẤT XỨ</th>
                            <td>@Model.XuatXu</td>
                        </tr>
                    </table>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <h3>KÍCH THƯỚC</h3>
                <hr style="border-top: 1px solid #000;">
                <table class="table table-border">
                    <tr>
                        <th>CHIỀU DÀI (CM)</th>
                        <td>@Model.ChieuDai</td>
                    </tr>
                    <tr>
                        <th>CHIỀU RỘNG (CM)</th>
                        <td>@Model.ChieuRong</td>
                    </tr>
                    <tr>
                        <th>CHIỀU CAO (CM)</th>
                        <td>@Model.ChieuCao</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- =======================    JS         =========================== -->
<script>
    var ProductImg = document.getElementById("ProductImg");
    var SmallImg = document.getElementsByClassName("small-img");

    SmallImg[0].onclick = function () {
        ProductImg.src = SmallImg[0].src;
    }
    SmallImg[1].onclick = function () {
        ProductImg.src = SmallImg[1].src;
    }
    SmallImg[2].onclick = function () {
        ProductImg.src = SmallImg[2].src;
    }
    SmallImg[3].onclick = function () {
        ProductImg.src = SmallImg[3].src;
    }
</script>
