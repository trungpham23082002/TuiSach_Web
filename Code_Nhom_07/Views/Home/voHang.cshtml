<!-- =============  VỎ HÀNG  =============== -->
<div class="container mt-3">
    <div class="row">
        <h3 class="text-center" style="font-weight: 700">GIỎ HÀNG CỦA BẠN</h3>
    </div>
    <div class="row">
        <table class="table table-borderless">
            <tr class="text-white" style="background: #ff523b;">
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
            </tr>
            @foreach(var item in Model)
            {
                soLuongTamTinh++;
                <tr>
                    <td>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="/Home/thongTinChiTietCuaSP/@item.maTS">
                                    <img style="width: 88px; height: 88px" src="~/assets/img/@item.hinhAnh">
                                </a>
                            </div>
                            <div class="col-md-10">
                                <a href="/Home/thongTinChiTietCuaSP/@item.maTS">
                                    <h5 style="font-size: 16px">@item.tenTS</h5>
                                </a>
                                <small style="font-weight: 600">@item.donGia VNĐ</small>
                                <a href="#">xóa</a>
                            </div>
                        </div>
                    </td>
                    <td>@item.soLuongMua</td>
                    <td>@item.donGia</td>
                </tr>
                tienTamTinh += @item.thanhTienTemp();
                tongThanhTien += @item.thanhTienTemp();
            }



        </table>
        
    </div>

    <div class="row">
        <table class="table table-borderless d-flex justify-content-end">
            <tr>
                <th>Tổng (chưa tính thuế)</th>
                <td>@tienTamTinh</td>
            </tr>
            <tr>
                <th>Thuế (8%)</th>
                <td>@(tienTamTinh*0.08)</td>
            </tr>
            <tr>
                <th>Tổng tiền</th>
                <td>@(tienTamTinh + tienTamTinh * 0.08)</td>
            </tr>
            <tr>
                <th>
                    <button class="btn bg-danger"><a href="#" style="list-style-type:none; color:white">Thanh Toán</a></button>
                </th>
            </tr>
        </table>
        
    </div>
</div>
