    ViewBag.Title = "voHang";
    Layout = "~/Views/Shared/LayoutHome.cshtml";
}

@using Code_Nhom_07.Models;
@model List<Item>


@{
    var soLuongTamTinh = 0;
    var tienTamTinh = 0;
    var tongThanhTien = 0;
}

