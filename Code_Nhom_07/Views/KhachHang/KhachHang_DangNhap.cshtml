@{
    ViewBag.Title = "KhachHang_DangNhap";
    Layout = "~/Views/Shared/LayoutHome.cshtml";
}

<link href="~/bootstrap5_2_3/css/bootstrap.css" rel="stylesheet" />
<link href="~/bootstrap5_2_3/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap5_2_3/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

@*link style*@
<link href="~/assets/css/style.css" rel="stylesheet" />

@*link font awesome 5.15.4*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<!-- =============== ĐĂNG NHẬP ================ -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div>
                <p>Chào mừng bạn</p>
                @if (Session["state"] == "0")
                {
                    <p style="font-weight: bold; font-size: 20px; color: red; text-align:center">Đăng nhập thất bại! sai tên tài khoản hoặc mật khẩu</p>
                }
                <form action="/KhachHang/KhachHang_DangNhap" method="post">
                    <div class="form-group">
                        <label for="tenDangNhap">Tên đăng nhập:</label>
                        <input type="text" id="login" class="form-control" name="txtName" />
                    </div>
                    <div class="form-group">
                        <label for="pwd">Mật khẩu:</label>
                        <input type="text" id="password" class="form-control" name="txtPass" />
                    </div>
                    <div class="row mt-2">
                        <div class="col d-flex justify-content-start">
                            <div class="checkbox">
                                <label><input type="checkbox">Nhớ mật khẩu</label>
                            </div>
                        </div>
                        <div class="col d-flex justify-content-end">
                            <a href="/Admin/QLDonHang">Đăng nhập bằng admin </a>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                        @*<div class="btn_them_mua" style="width: 220px">
                            <a href="TrangChoKH.html">ĐĂNG NHẬP</a>
                        </div>*@
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <h3>Khách hàng đăng ký mới</h3>
                <p>
                    Bằng cách tạo tài khoản với 2002SHOP, bạn sẽ có thể <br>
                    di chuyển qua quy trình <span style="font-weight: bold;">
                        thanh toán nhanh hơn, lưu trữ <br>
                        nhiều địa chỉ giao hàng
                    </span>, xem và theo dõi đơn hàng của bạn <br>
                    trong tài khoản của bạn và hơn thế nữa.
                </p>
                <div class="row d-flex justify-content-center">
                    <div class="btn_them_mua" style="width: 220px">
                        <a href="/Home/dangKy">ĐĂNG KÝ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>