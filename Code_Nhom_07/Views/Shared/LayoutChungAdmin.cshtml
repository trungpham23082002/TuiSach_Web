<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/bootstrap5_2_3/js/bootstrap.bundle.js"></script>
    <script src="~/bootstrap5_2_3/js/bootstrap.js"></script>
    <link href="~/bootstrap5_2_3/css/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap5_2_3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />

    <style>
        .info_admin {
            text-align: center;
        }

            .info_admin img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
            }

        .ds_danhMuc nav li a {
            color: #fff;
            text-align: center;
            padding: 9px;
        }

            .ds_danhMuc nav li a:hover {
                color: #fff;
            }


        .ds_danhMuc nav li.active {
            background-color: #EC870E;
        }

        .ds_danhMuc nav li {
            margin: 2px 0;
            border-radius: 5px;
            transition: 0.3s all;
        }

            .ds_danhMuc nav li:hover {
                background-color: aquamarine;
            }

        .tieuDe p {
            font-weight: bold;
            background-color: #fff;
            padding: 10px 30px;
            border-left: 3px solid #EC870E;
            border-radius: 5px;
        }

        .dsSP {
            background-color: #fff;
            margin-left: 15px;
        }

            .dsSP nav ul li a {
                color: #000;
            }

            .dsSP nav ul li {
                margin-right: 10px;
                border-radius: 5px;
            }

        .cacChucNang {
            display: flex;
            justify-content: space-around;
            background-color: #fff;
            border-radius: 6px;
            padding: 5px;
            text-align: center;
        }

            .cacChucNang p {
                font-weight: bold;
            }

            .cacChucNang small {
                font-size: 10px;
            }

        .tinhTrangDonHang {
            background-color: #fff;
            border-radius: 6px;
            padding: 10px;
        }

    </style>

</head>
<body>
    <div class="container-fluid mt-2">
        <div class="row" style="height: 600px;">
            <div class="col-md-2 border" style="background-color: #000099; color: #fff">
                <div class="row mt-2">
                    <div class="info_admin">
                        <img src="~/assets/img/IMG_20220209_075103.jpg" style="width: 150px; height: 150px; border-radius: 50%" />
                        <h5>Vương Chí Hải</h5>
                        <p>Chào mừng bạn trở lại</p>
                        <p><a href="/Home/Home_Index">Đăng xuất</a></p>
                    </div>
                    <hr style="border: 1px solid #fff;">
                    <div class="ds_danhMuc">
                        <nav class="navbar">
                            <div class="container">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a href="/Admin/bangDieuKhien" class="nav-link">Bảng điều khiển</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Admin/QLKhachHang" class="nav-link">Quản lý khách hàng</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Admin/QLSanPham" class="nav-link">Quản lý sản phẩm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Admin/QLLoaiHang" class="nav-link">Quản lý loại hàng</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Admin/QLDonHang" class="nav-link">Quản lý đơn hàng</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="/Admin/BaoCaoDoanhThu" class="nav-link">Báo cáo doanh thu</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-md-10 border" style="background-color: #EEEEEE;">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
