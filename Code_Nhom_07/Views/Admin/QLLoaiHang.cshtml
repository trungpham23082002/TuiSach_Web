@{
    ViewBag.Title = "QLLoaiHang";
    Layout = "~/Views/Shared/LayoutChungAdmin.cshtml";
}
<link href="~/bootstrap5_2_3/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/bootstrap5_2_3/css/bootstrap.css" rel="stylesheet" />
@using Code_Nhom_07.Models;
@model List<PHANLOAI>
<div class="row mt-3">
    <div class="tieuDe">
        <p>Danh sách loại hàng</p>
    </div>
</div>
<div class="row mt-2">
    <div class="row">
        <div class="dsSP">
            <nav class="navbar navbar-expand-sm">
                <div class="container">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="background-color: #66FF33;">
                            <a href="/Admin/ThemMoiLoaiHang" class="nav-link">Tạo mới loại hàng</a>
                        </li>
                        <li class="nav-item" style="background-color: #66FF33;">
                            <a href="#" class="nav-link">Xóa tất cả</a>
                        </li>
                    </ul>
                    <div class="row">

                    </div>
                </div>
            </nav>
            <hr style="border: 1px solid gray;">
            <div style="width: 200px;">
                <div class="input-group rounded">
                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                    <button class="btn">Tìm kiếm</button>
                </div>
            </div>
            <table class="table text-center">
                <tr>
                    <th>Mã loại</th>
                    <th>Tên thể loại</th>
                    <th>Giới tính</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaLoai</td>
                        <td>@item.TenLoai</td>
                        <td>@item.GioiTinh</td>
                        <td>
                            <a href="/Admin/SuaLoaiHang/@item.MaLoai">Sửa|</a>
                            <a href="/Admin/XoaLoaiHang/@item.MaLoai">Xóa</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
