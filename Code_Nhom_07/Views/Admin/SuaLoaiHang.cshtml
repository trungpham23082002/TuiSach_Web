@{
    ViewBag.Title = "SuaLoaiHang";
}
@model Code_Nhom_07.Models.PHANLOAI

@using (Html.BeginForm("SuaLoaiHang", "Admin", FormMethod.Post, Model.MaLoai))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sửa loại hàng</legend>

        @Html.HiddenFor(model => model.MaLoai)

        <div class="editor-label">
            @Html.LabelFor(model => model.TenLoai)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenLoai)
            @Html.ValidationMessageFor(model => model.TenLoai)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GioiTinh)
            @Html.ValidationMessageFor(model => model.GioiTinh)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "/QLLoaiHang")
</div>