r@{
    ViewBag.Title = "taoMoiSanPham";
    Layout = "~/Views/Shared/LayoutChungAdmin.cshtml";
}

<div class="row mt-3">
    <div class="tieuDe">
        <p>Danh Sách Sản Phẩm / Thêm mới sản phẩm</p>
    </div>
</div>

<div class="row mt-2">
    <div class="row">
        <div class="dsSP">
            <h5 style="margin-top: 10px;">Tạo mới sản phẩm</h5>
            <hr style="border: 1px solid gray;">
            <form action="/Admin/XLThemMoiSanPham" method="post">
                <div class="row">
                    <div class="col">
                        <label for="" style="font-weight: bold;">Mã sản phẩm</label>
                        <input type="text" name="MaTuiSach" class="form-control" />
                    </div>
                    <div class="col" style="font-weight: bold;">
                        <label for="">Tên sản phẩm</label>
                        <input type="text" name="TenTuiSach" class="form-control">
                    </div>
                    <div class="col">
                        <label for="" style="font-weight: bold;">Mã thương hiệu</label>
                        <input type="text" name="MaThuongHieu" class="form-control">
                    </div>
                    <div class="col">
                        <label for="" style="font-weight: bold;">Xuất xứ</label>
                        <input type="text" name="XuatXu" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="" style="font-weight: bold;">Giá bán</label>
                        <input type="text" name="GiaBan" class="form-control">
                    </div>
                    <div class="col" style="font-weight: bold;">
                        <label for="">Mã loại</label>
                        <input type="text" name="MaLoai" class="form-control">
                    </div>
                    <div class="col">
                        <label for="" style="font-weight: bold;">Chất liệu</label>
                        <input type="text" name="ChatLieu" class="form-control">
                    </div>
                    <div class="col">
                        <label for="" style="font-weight: bold;">Chiều cao</label>
                        <input type="text" name="ChieuCao" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="" style="font-weight: bold;">Chiều rộng</label>
                        <input type="text" name="ChieuRong" class="form-control">
                    </div>
                    <div class="col" style="font-weight: bold;">
                        <label for="">Chiều dài</label>
                        <input type="text" name="ChieuDai" class="form-control">
                    </div>
                    <div class="col">
                        <label for="" style="font-weight: bold;">Màu sắc</label>
                        <input type="text" class="form-control" name="MauSac">
                    </div>
                    <div class="col">
                    </div>
                </div>

                <div class="row mt-2">
                    <label for="" style="font-weight: bold;">Hình ảnh</label>
                    <input type="file" name="HinhAnh">
                </div>
                <div class="row mt-2">
                    <label for="" style="font-weight: bold;">Mô tả sản phẩm</label>
                    <textarea class="form-control" rows="5" id="comment" name="MoTa"></textarea>
                </div>
                <div class="mt-3">
                    <p>
                        <input type="submit" value="Thêm" />
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
