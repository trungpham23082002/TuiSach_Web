@{
    ViewBag.Title = "QLDonHang";
    Layout = "~/Views/Shared/LayoutChungAdmin.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

@using Code_Nhom_07.Models;
@model List<CHITIETDONHANG>

<div class="row mt-3">
    <div class="tieuDe">
        <p>Danh Sách đơn hàng</p>
    </div>
</div>
<div class="row mt-2">
    <div class="row">
        <div class="dsSP">
            <nav class="navbar navbar-expand-sm">
                <div class="container">
                    <ul class="navbar-nav">
                        <li class="nav-item" style="background-color: #66FF33;">
                            <a href="/Admin/taoMoiDonHang" class="nav-link">Tạo mới đơn hàng</a>
                        </li>
                        <li class="nav-item" style="background-color: #66FF33;">
                            <a href="#" class="nav-link">Xóa tất cả</a>
                        </li>
                    </ul>
                    <div class="row">

                    </div>
                </div>
            </nav>
            <hr style="border: 1px solid gray;">

            <div class="d-flex justify-content-between mb-3">
                <div class="p-2 ">
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                        <button class="btn">Tìm kiếm</button>
                    </div>
                </div>
                <div class="p-2">
                    <div class="dropdown">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                            Chọn tình trạng
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Admin/QLDonHang">Tất cả đơn hàng</a></li>
                            <li><a class="dropdown-item" href="/Admin/quanLy_QLDonHang_ChuaGiao">Chưa giao</a></li>
                            <li><a class="dropdown-item" href="/Admin/quanLy_QLDonHang_DaGiao">Đã giao</a></li>
                        </ul>
                    </div>
                </div>
            </div>


            <table class="table text-center">
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Mã khách hàng</th>
                    <th>Ngày lập</th>
                    <th>Ngày giao</th>
                    <th>Ngày thanh toán</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">@item.MaDonHang</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.Action("quanLy_ThongKeHoaDon", "Admin", new { m = item.MaDonHang });
                                </li>
                            </ul>
                        </td>
                        @*<td>@item.KHACHHANG.HoTen</td>*@
                        <td>@item.MaKhachHang</td>
                        <td>@item.NgayLap</td>
                        <td>@item.NgayGiao</td>
                        <td>@item.NgayThanhToan</td>
                        <td>
                            <a href="/Admin/XoaHd/?m=@item.MaDonHang"> Xóa</a> | sửa
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
